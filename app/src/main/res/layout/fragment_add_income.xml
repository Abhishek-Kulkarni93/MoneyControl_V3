<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddIncomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        >

        <EditText
            android:id="@+id/editText_incomeAmount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Income Amount"
            android:inputType="numberSigned|number|numberDecimal"
            android:text="" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText_incomeDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Date"
                android:inputType="date"
                android:text="" />

            <Button
                android:id="@+id/button_selectIncomeDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Select Date" />

        </LinearLayout>

        <EditText
            android:id="@+id/editText_incomeNotes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Income Notes"
            android:inputType="textPersonName"
            android:text="" />

        <Button
            android:id="@+id/button_addIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Income"
            android:layout_marginTop="15dp" />

        <ListView
            android:id="@+id/lv_incomeList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</FrameLayout>